{% extends "default.html.twig" %}

{% block title %}Error!{% endblock %}

{% block head %}
    {{ parent() }}
    <style>
        pre {
            background: #2d3748;
            color: #e2e8f0;
            padding: 1.5rem;
            border-radius: 8px;
            overflow-x: auto;
            font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
            font-size: 0.875rem;
            line-height: 1.6;
            border: 1px solid #4a5568;
        }

        .error-type {
            color: #fc8181;
            font-weight: 600;
        }

        .file-path {
            color: #90cdf4;
        }

        .line-number {
            color: #fbd38d;
        }
    </style>
{% endblock %}

{% block content %}
    <section>
        <h1>{{ statusCode }} {{ statusText }}</h1>
        <p>An error occurred when processing the request.</p>
    </section>

    {% if details %}
        <section>
            <h2>Exception Details</h2>
            <pre><code>
{%- for ex in details %}
<span class="error-type">{{ ex.class }}</span>
{% if ex.message -%} {{ ex.message }} {%- endif %}


<span class="error-type">Stack trace:</span>
{% for trace in ex.trace %}
at <span class="file-path">{{ trace.file }}</span>:<span class="line-number">{{ trace.line }}</span>
    {{ trace.class ~ trace.type ~ trace.function ~ (trace.function ? '()' : '') }}
{% endfor %}

<hr>
{% endfor %}
            </code></pre>
        </section>
    {% endif %}
{% endblock %}